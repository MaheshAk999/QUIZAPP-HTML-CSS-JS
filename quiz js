    <script>
      var i=1;
      var score=0;
        function hell()
        {
            let a=document.getElementById("a");
            let b=document.getElementById("b");
            let c=document.getElementById("c");
            let d=document.getElementById("d");
            let e=document.getElementById("e");
            if(a.style.backgroundColor!="pink" && b.style.backgroundColor!="pink" && c.style.backgroundColor!="pink" && d.style.backgroundColor!="pink" && e.style.backgroundColor!="pink")
            {
                document.getElementById("para").innerHTML="select any one of category";
            }
            else{
                
                document.getElementById("a");
                if(a.style.backgroundColor=="pink")
                {
                    document.getElementById("para").style.display="none";
                document.getElementById("but").style.display="none";   
                hello();
                }                
            }
        }
        function reset()
        {
            document.getElementById("a").style.backgroundColor="white";
            document.getElementById("b").style.backgroundColor="white";
            document.getElementById("c").style.backgroundColor="white";
            document.getElementById("d").style.backgroundColor="white";
            document.getElementById("e").style.backgroundColor="white";
            document.getElementById("para").innerHTML="";  
        }
        var d=document.getElementById("a");
        d.addEventListener("click",questions);
        function questions()
        {
            var que={
                    1:"WHO HAS MOST RUNS IN THE IPL ?",
                    2:"HOW MANY CENTURIES VIRAT KOHLI MADE ?",
                    3:"WHICH IPL TEAM WON MORE IPL TROPIES ?",
                    4:"WHO SCORED MORE RUNS IN DEATH OVERS ?",
                    5:"HOW MANY IPL TROPIES CSK WON ?"
                }
                var opt1={
                    1:"VIRAT KOHLI",
                    2:"74",
                    3:"PBKS",
                    4:"MSD",
                    5:"4"
                }
                var opt2={
                    1:"M S DHONI",
                    2:"75",
                    3:"MI",
                    4:"ROHIT SHARMA",
                    5:"3"
                }
                var opt3={
                    1:"SHIKHAR DHAWAN",
                    2:"78",
                    3:"CSK",
                    4:"AB DEVELLIERS",
                    5:"2"
                }
                var opt4={
                    1:"SURESH RAINA",
                    2:"71",
                    3:"RR",
                    4:"KIERON POLLARD",
                    5:"1"
                }
                var correct={
                    1:"VIRAT KOHLI",
                    2:"75",
                    3:"MI",
                    4:"MSD",
                    5:"4"
                }
                if(i<=5)
                {
                    document.getElementById("scoreboard").value="score : "+score;
                    document.getElementById("question").innerHTML=i+") "+que[i];
                    const optt1=document.getElementById("opt1");
                    const optt2=document.getElementById("opt2");
                    const optt3=document.getElementById("opt3");
                    const optt4=document.getElementById("opt4");
                    optt1.innerHTML="A) "+opt1[i];
                    optt2.innerHTML="B) "+opt2[i];
                    optt3.innerHTML="C) "+opt3[i];
                    optt4.innerHTML="D) "+opt4[i];
                    optt1.style.cssText="background-color:none";
                    optt2.style.cssText="background-color:none";
                    optt3.style.cssText="background-color:none";
                    optt4.style.cssText="background-color:none";
                    optt1.addEventListener("click",fun1);
                    function fun1()
                    {
                        optt1.style.cssText="background-color:pink";
                        optt2.style.cssText="background-color:none";
                        optt3.style.cssText="background-color:none";
                        optt4.style.cssText="background-color:none";
                    }
                    optt2.addEventListener("click",fun2);
                    function fun2()
                    {
                        optt2.style.cssText="background-color:pink";
                        optt1.style.cssText="background-color:none";
                        optt3.style.cssText="background-color:none";
                        optt4.style.cssText="background-color:none";
                    }
                    optt3.addEventListener("click",fun3);
                    function fun3()
                    {
                        optt3.style.cssText="background-color:pink";
                        optt2.style.cssText="background-color:none";
                        optt1.style.cssText="background-color:none";
                        optt4.style.cssText="background-color:none";
                    }
                    optt4.addEventListener("click",fun4);
                    function fun4()
                    {
                        optt4.style.cssText="background-color:pink";
                        optt2.style.cssText="background-color:none";
                        optt1.style.cssText="background-color:none";
                        optt3.style.cssText="background-color:none";
                    }
                    const ans=document.getElementById("button1");
                    ans.addEventListener("click",answerr);
                    function answerr()
                    {
                        var a=opt1[i];
                        var e=opt2[i];
                        var c=opt3[i];
                        var d=opt4[i];
                        var b=correct[i]
                        if(i<=5)
                        {
                            if(a==b && optt1.style.backgroundColor=="pink")
                            {
                                optt1.style.cssText="background-color:lightgreen";
                                score+=1;
                                document.getElementById("scoreboard").value="score : "+score;
                                i=i+1;
                               const a=setTimeout( questions,500);
                            }
                            else if(e==b && optt2.style.backgroundColor=="pink")
                            {
                                optt2.style.cssText="background-color:lightgreen";
                                i=i+1;
                                score+=1;
                                document.getElementById("scoreboard").value="score : "+score;
                                const a=setTimeout( questions,500);
                            }
                            else  if(c==b && optt3.style.backgroundColor=="pink")
                            {
                                optt3.style.cssText="background-color:lightgreen";
                                i=i+1;
                                score+=1;
                                document.getElementById("scoreboard").value="score : "+score;
                                const a=setTimeout( questions,500);
                            }                        
                            else  if(d==b && optt4.style.backgroundColor=="pink")
                            {
                                optt4.style.cssText="background-color:lightgreen";
                                i=i+1;
                                score+=1;
                                document.getElementById("scoreboard").value="score : "+score;
                                const a=setTimeout( questions,500);
                            }                        
                            else  if(optt1.style.backgroundColor=="pink")
                                {
                                    optt1.style.backgroundColor="red";
                                    i=i+1;
                                    const a=setTimeout( questions,500);
                                }                               
                                else  if(optt2.style.backgroundColor=="pink")
                                {
                                   optt2.style.backgroundColor="red";
                                   i=i+1;
                                   const a=setTimeout( questions,500);
                                }
                                else  if(optt3.style.backgroundColor=="pink")
                                {
                                    optt3.style.backgroundColor="red";
                                    i=i+1;
                                    const a=setTimeout( questions,500);
                                }
                                else if(optt4.style.backgroundColor=="pink"){
                                    optt4.style.backgroundColor="red";
                                    i=i+1;
                                    const a=setTimeout( questions,500);
                                }
                            }
                            else{
                                const a=setTimeout(scoreboard,500);
                            }  
                    }
                }  
        }
        function scoreboard()
        {
            alert("Your score is "+score);  
        }
